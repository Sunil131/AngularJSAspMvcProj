@{
    ViewBag.Title = "App";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>App</h2>
<div data-ng-app="forumsApp">
    <div data-ng-controller="threadsController">
        <div role="form" class="form-horizontal">
            <div class="form-group">
                <label for="ThreadName" class="col-sm-2 control-label">Thread Name</label>
                <input type="text" class="form-control" id="ThreadName" placeholder="Enter Thread Name" data-ng-model="ThreadName" />{{ThreadName}}
            </div>

            <div class="form-group">
                <label for="ThreadDescription" class="col-sm-2 control-label">A Little Description</label>
                <textarea class="form-control" id="Description" rows="3" aria-multiline="true" placeholder="Enter Thread Description" data-ng-model="Description">{{Description}}</textarea>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="button" value="Submit" />
                    @*<input type="submit" value="Submit">Submit</input>*@
                </div>
            </div>

        </div>
        <div>
            <div data-ng-repeat="thread in threads">
                <div>
                <span> {{thread.Header}}</span>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="~/App/app.js" type="text/javascript"></script>
<script src="~/App/Controller/controller.js" type="text/javascript"></script>
<script src="~/App/Services/AppServices.js" type="text/javascript"></script>
